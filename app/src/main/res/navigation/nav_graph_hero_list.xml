<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_hero_list"
    app:startDestination="@id/heroListFragment">

    <fragment
        android:id="@+id/heroListFragment"
        android:name="meh.daniel.com.saymynameapp.presentation.screen.characterlist.CharacterListFragment"
        android:label="fragment_herolist"
        tools:layout="@layout/fragment_characterlist" >
        <action
            android:id="@+id/action_heroListFragment_to_heroDetailInfoFragment"
            app:destination="@id/heroDetailInfoFragment" />
    </fragment>

    <fragment
        android:id="@+id/heroDetailInfoFragment"
        android:name="meh.daniel.com.saymynameapp.presentation.screen.characterdetail.CharacterDetailInfoFragment"
        android:label="HeroDetailInfoFragment" >
        <argument
            android:name="idHero"
            app:argType="string" />
    </fragment>

</navigation>